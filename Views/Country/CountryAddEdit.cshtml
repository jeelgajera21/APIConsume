@model CountryModel

@{
    ViewData["Title"] = " Add/Edit Country";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <form asp-action="Save" asp-controller="Country" method="post" class="form-horizontal">
        @* Hidden field to handle editing existing country *@
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="CityID" class="form-label fw-bold">Country ID</label>

                <input type="text" id="CountryID" name="CountryID" class="form-control" value="@Model.CountryID" readonly />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="control-label">Country Name</label>
                <input class="form-control" placeholder="Enter Country Name" asp-for="CountryName" required />
                <span class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="control-label">Country Code</label>
                <input class="form-control" asp-for="CountryCode" placeholder="Enter Country Code" required />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="CreatedDate" class="form-label fw-bold">Created Date</label>


                <input type="datetime-local" id="CreatedDate" name="CreatedDate" class="form-control"
                       value="@Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm:ss")" readonly />
            </div>

            <div class="col-md-6">
                <label for="ModifiedDate" class="form-label fw-bold">Modified Date</label>


                <input type="datetime-local" id="ModifiedDate" name="ModifiedDate" class="form-control"
                       value="@Model.ModifiedDate.ToString("yyyy-MM-ddTHH:mm:ss")" />
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary px-4">Save</button>
            <a asp-action="CountryList" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @* Include unobtrusive validation if not already included *@
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}

