@model IEnumerable<StateModel>
@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="text-start col">
                                <h5 class="card-title">State</h5>
                            </div>
                            <div class="text-end col">

                                <a class="text-end " asp-controller="State" asp-action="StateAddEdit">
                                    <button class="btn btn-primary mb-3"><i class="bi bi-plus-lg"></i>&nbsp;Add State</button>
                                </a>
                            </div>
                        </div>



                        <!-- End Page Title -->


                        <div class="mb-3">
                            <input type="text" class="form-control" id="citySearch" placeholder="Search Any">
                        </div>

                        <table class="table table-hover table-header-fixed">
                            <thead>
                                <tr>
                                    <th scope="col">StateID</th>
                                    <th scope="col">State Name</th>
                                    <th scope="col">State Code</th>
                                    <th scope="col">CountryID</th>
                                    <th scope="col">createdDate</th>
                                    <th scope="col">ModifiedDate</th>
                                    <th scope="col" class="text-center">Actions</th>

                                </tr>
                            </thead>
                            <tbody id="cityTable">
                                @foreach (var i in Model)
                                {
                                    <tr>

                                        <td>@i.StateID</td>
                                        <td>@i.StateName</td>
                                        <td>@i.StateCode</td>
                                        <td>@i.CountryID</td>
                                        <td>@i.CreatedDate</td>
                                        <td>@i.ModifiedDate</td>
                                        <td class="text-center">
                                            <!-- Edit Button -->
                                            <a class="btn btn-outline-success btn-xs me-2" asp-controller="State" asp-action="StateAddEdit"
                                               asp-route-StateID="@i.StateID">
                                                Edit
                                            </a>
                                            <!-- Delete Button -->
                                            <a class="btn btn-outline-danger btn-xs" asp-controller="State" asp-action="Delete"
                                               asp-route-StateID="@i.StateID"
                                               onclick="return confirm('Are you sure you want to delete this city?');">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
</main>
