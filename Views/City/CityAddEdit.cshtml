

 @model CityModel


<h2 class="text-center my-4">City Add/Edit</h2>

<main id="main" class="main container">
    <div class="card shadow-sm p-4">
        
        <form asp-action="Save" asp-controller="City" method="post" class="needs-validation" novalidate>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="CityID" class="form-label fw-bold">City ID</label>
                     
                    <input type="text" id="CityID" name="CityID" class="form-control" value="@Model.CityID" readonly />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="CityName" class="form-label fw-bold">City Name</label>
                     

                    <input type="text" id="CityName" name="CityName" class="form-control" value="@Model.CityName" required />
                    <div class="invalid-feedback">City Name is required.</div>
                </div>

                <div class="col-md-6">
                    <label for="CityCode" class="form-label fw-bold">City Code</label>
                     

                    <input type="text" id="CityCode" name="CityCode" class="form-control" value="@Model.CityCode" required />
                    <div class="invalid-feedback">City Code is required.</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="StateID" class="form-label fw-bold">State ID</label>
                     

                    <input type="number" id="StateID" name="StateID" class="form-control" value="@Model.StateID" required />
                    <div class="invalid-feedback">State ID is required.</div>
                </div>

                <div class="col-md-6">
                    <label for="CountryID" class="form-label fw-bold">Country ID</label>
                     

                    <input type="number" id="CountryID" name="CountryID" class="form-control" value="@Model.CountryID" required />
                    <div class="invalid-feedback">Country ID is required.</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="CreatedDate" class="form-label fw-bold">Created Date</label>
                     

                     <input type="datetime-local" id="CreatedDate" name="CreatedDate" class="form-control"
                            value="@Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm:ss")" readonly />
                </div>

                <div class="col-md-6">
                    <label for="ModifiedDate" class="form-label fw-bold">Modified Date</label>
                     

                    <input type="datetime-local" id="ModifiedDate" name="ModifiedDate" class="form-control" 
                           value="@Model.ModifiedDate.ToString("yyyy-MM-ddTHH:mm:ss")" />
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary px-4">Save</button>
            </div>
        </form>
    </div>
</main>

<script>
    // Enable Bootstrap's form validation
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
